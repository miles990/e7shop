    <%= f.label :description, "敘述資訊" %><br>
    <%= f.text_area :description, rows: 6 %>
  </div>
  <div class="field">
    <%= f.label :image_url, "圖片路徑" %><br>
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :price, "價格" %><br>
    <%= f.text_field :price %>
  </div>
  <div class="actions">
    <%= submit_tag "更新商品資訊" %>
  </div>
<% end %>
