<div class="cart_title">已選購</div>
<table>
    <%= render(cart.line_items) %>

    <tr class="total_line">
        <td colspan="2">Total</td>
        <td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
    </tr>
</table>

<%= button_to '清除選購', cart, method: :delete,
     data:{ confirm: '確定要清除選購項目?' } %>